<p id="notice"><%= notice %></p>

<h1>Slogans</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Slogan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slogans.each do |slogan| %>
      <tr>
        <td><%= slogan.firstname %></td>
        <td><%= slogan.lastname %></td>
        <td><%= slogan.email %></td>
        <td><%= slogan.slogan %></td>
        <td><%= link_to 'Show', slogan %></td>
        <td><%= link_to 'Edit', edit_slogan_path(slogan) %></td>
        <td><%= link_to 'Destroy', slogan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

